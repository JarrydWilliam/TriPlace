{
  "expo": {
    "name": "TriPlace - Your Digital Third Place",
    "slug": "triplace-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f59e0b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.triplace.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TriPlace needs location access to find communities and events near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TriPlace uses location to provide personalized community recommendations and nearby events.",
        "NSCameraUsageDescription": "TriPlace needs camera access to take photos for your profile and community posts.",
        "NSPhotoLibraryUsageDescription": "TriPlace needs photo library access to share images in communities.",
        "NSMicrophoneUsageDescription": "TriPlace needs microphone access for voice messages in communities.",
        "NSContactsUsageDescription": "TriPlace can access your contacts to help you find friends in communities.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "triplace-deep-link",
            "CFBundleURLSchemes": ["triplace"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f59e0b"
      },
      "package": "com.triplace.mobile",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "READ_CONTACTS",
        "VIBRATE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "triplace"
            },
            {
              "scheme": "https",
              "host": "TriPlaceApp.replit.app"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#f59e0b",
      "androidMode": "default",
      "androidCollapsedTitle": "TriPlace",
      "sounds": [
        "./assets/notification.wav"
      ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": "1.0.0",
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "scheme": "triplace",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "TriPlace uses location to find communities and events near you.",
          "locationAlwaysPermission": "TriPlace uses background location to provide personalized recommendations.",
          "locationWhenInUsePermission": "TriPlace needs location access to show nearby communities."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#f59e0b",
          "sounds": ["./assets/notification.wav"]
        }
      ]
    ]
  }
}