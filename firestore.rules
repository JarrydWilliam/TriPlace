rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Communities are readable by authenticated users, writable by members
    match /communities/{communityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource == null || 
         request.auth.uid in resource.data.memberIds ||
         request.auth.uid == resource.data.createdBy);
    }
    
    // Events are readable by authenticated users, writable by community members
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.organizerId);
    }
    
    // Messages are readable by community members only
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}